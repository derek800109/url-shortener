<div class="d-flex justify-content-center">
  <div class="d-flex flex-column align-items-center" style="width: 40%;">
    <h3 class="mb-2">
      URL Shortner
    </h3>
    <div class="mb-2">
      <i class="fas fa-link fa-5x"></i>
    </div>
    <div class="mb-2">
      {{#unless showShortenURL}}
      <form class="d-flex flex-column align-items-center" action="/" method="POST">
        <div class="form-group">
          <input type="url" class="form-control" name="inputURL" placeholder="Input URL here" size="60"
            value="https://www.google.com/">
        </div>
        <button type="submit" class="btn btn-primary">Shorten</button>
      </form>
      {{/unless}}
      {{#if showShortenURL}}
      <div class="d-flex flex-column">
        <h3>Success! Please use this link:</h3>
        <a href="{{shortenURL}}">{{shortenURL}}</a>
        <button type="button" class="btn btn-primary">Copy</button>
      </div>
      {{/if}}
    </div>
  </div>
</div>